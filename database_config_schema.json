{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DatabaseConnectorConfig",
  "type": "object",
  "properties": {
    "database_type": {
      "type": "string",
      "enum": [
        "PostgreSQL",
        "MySQL",
        "SQLServer",
        "MongoDB",
        "Snowflake",
        "BigQuery",
        "Oracle"
      ],
      "description": "Type of the database"
    },
    "config": {
      "type": "object",
      "properties": {
        "host": {
          "type": "string",
          "description": "Database server hostname or IP address"
        },
        "port": {
          "type": "integer",
          "description": "Database server port number"
        },
        "username": {
          "type": "string",
          "description": "Username for database authentication"
        },
        "password": {
          "type": "string",
          "description": "Password or secret for database authentication"
        },
        "database": {
          "type": "string",
          "description": "Name of the specific database/schema to connect to"
        },
        "driver": {
          "type": "string",
          "description": "Database driver or engine name (if required)"
        },
        "ssl": {
          "type": "boolean",
          "description": "Whether to use SSL/TLS for the connection"
        },
        "ssl_mode": {
          "type": "string",
          "description": "SSL mode or security level (e.g., 'require', 'verify-ca', 'verify-full')",
          "nullable": true
        },
        "ssl_ca": {
          "type": "string",
          "description": "Path to CA certificate file",
          "nullable": true
        },
        "ssl_cert": {
          "type": "string",
          "description": "Path to client certificate file",
          "nullable": true
        },
        "ssl_key": {
          "type": "string",
          "description": "Path to client private key file",
          "nullable": true
        },
        "timeout": {
          "type": "integer",
          "description": "Connection timeout in seconds",
          "nullable": true
        },
        "pool_size": {
          "type": "integer",
          "description": "Maximum number of connections in the pool",
          "nullable": true
        },
        "project_id": {
          "type": "string",
          "description": "Project ID (for BigQuery)",
          "nullable": true
        },
        "auth_type": {
          "type": "string",
          "description": "Authentication type (e.g., 'service_account', 'basic')",
          "nullable": true
        },
        "auth_file": {
          "type": "string",
          "description": "Path to authentication file (e.g., service account key for BigQuery/Snowflake)",
          "nullable": true
        },
        "warehouse": {
          "type": "string",
          "description": "Warehouse name (for Snowflake)",
          "nullable": true
        },
        "schema": {
          "type": "string",
          "description": "Schema name (for Snowflake/Oracle/others)",
          "nullable": true
        },
        "role": {
          "type": "string",
          "description": "Role (for Snowflake)",
          "nullable": true
        }
      },
      "required": [
        "host",
        "port",
        "username",
        "password",
        "database",
        "driver",
        "ssl"
      ],
      "additionalProperties": true
    }
  },
  "required": [
    "database_type",
    "config"
  ]
}

